{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true,
      "esModuleInterop": true,
      "lib": ["ES2022"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "dist",
      "resolveJsonModule": true,
      "rootDir": "src",
      "strict": false,
      "target": "ES2022",
      "useUnknownInCatchVariables": false
    },
    "include": ["**/*.ts"],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/__tests__/*",
      "**/__mocks__/*",
      "e2e"
    ]
  }
  